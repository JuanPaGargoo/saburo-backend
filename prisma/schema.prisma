generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  profilePhoto   String?  // Campo opcional (nullable)
  emailVerifiedAt DateTime? // Campo opcional (nullable)
  rememberToken  String?  // Campo opcional (nullable)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}